<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.makingmagic.fairfare.FareCardFragment" >

           <TableRow
               android:id="@+id/tableRow1"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:gravity="center" >

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:text="To :"
                   android:textColor="@android:color/darker_gray" />

               <ScrollView
                   android:id="@+id/scrollView1"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" >

                   <TextView
                       android:id="@+id/tv_dest"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight=".2"
                       android:ems="10"
                       android:gravity="center"
                       android:text="To : Indiranagar, Bangalore, India" />

               </ScrollView>

           </TableRow>

           <TableRow
               android:id="@+id/tableRow2"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:gravity="center" >

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:text="From :"
                   android:textColor="@android:color/darker_gray" />

               <ScrollView
                   android:id="@+id/scrollView2"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" >

                   <TextView
                       android:id="@+id/tv_src"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".2"
                       android:ems="10"
                       android:gravity="center"
                       android:text="From : Jayanagar, Bangalore, India" />

               </ScrollView>

           </TableRow>

           <TableRow
               android:id="@+id/tableRow3"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:gravity="center" >

               <TextView
                   android:id="@+id/textView3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:text="Fare :"
                   android:textColor="@android:color/darker_gray" />

               <TextView
                   android:id="@+id/tv_est_fare"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:gravity="center"
                   android:text="120"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textColor="#FF1111" />

           </TableRow>

           <TableRow
               android:id="@+id/tableRow4"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:gravity="center" >

               <TextView
                   android:id="@+id/textView4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Distance :"
                   android:textColor="@android:color/darker_gray" />

               <TextView
                   android:id="@+id/tv_est_dist"
                   android:layout_width="match_parent"
                   android:ems="10"
                   android:gravity="center"
                   android:text="Esitmated Distance : 11.2 km" />

           </TableRow>

           <TableRow
               android:id="@+id/tableRow5"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_gravity="center"
               android:layout_weight="1"
               android:gravity="center" >

               <TextView
                   android:id="@+id/textView5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Duration :"
                   android:textColor="@android:color/darker_gray" />

               <TextView
                   android:id="@+id/tv_est_time"
                   android:layout_width="match_parent"
                   android:ems="10"
                   android:gravity="center"
                   android:text="Estimated Duration: 30 mins" />

           </TableRow>

</TableLayout>



